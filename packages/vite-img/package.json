{
  "name": "vite-img",
  "module": "index.ts",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "build": "rollup -c --configPlugin swc",
    "watch": "rollup -c --configPlugin swc --watch"
  },
  "files": [
    "./dist/",
    "./src/"
  ],
  "exports": {
    ".": {
      "types": "./src/index.tsx",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./vite": {
      "types": "./src/vite.ts",
      "import": "./dist/vite.js",
      "require": "./dist/vite.cjs"
    },
    "./types": "./src/types.d.ts"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "sharp": "^0.33.5",
    "typescript": "^5.0.0",
    "vite": "^6.0.3"
  },
  "devDependencies": {
    "@rollup/plugin-swc": "^0.4.0",
    "@swc/core": "^1.10.0",
    "@types/bun": "latest",
    "@types/react": "^19.0.1",
    "rollup": "^4.28.1"
  }
}
